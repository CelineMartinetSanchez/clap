<%= form_for [@challenge, @challenge_step] do |f| %>
  <%= @challenge_step.question.query %>

  <ul>
    <li>
      <%= f.label @challenge_step.question.answers.good_answer %>
      <%= f.radio_button :chosen_answer, @challenge_step.question.answer.good_answer %>
    </li>
    <li>
      <%= f.label @challenge_step.question.answers.answer1 %>
      <%= f.radio_button :chosen_answer, @challenge_step.question.answers.answer1 %>
    </li>
    <li>
      <%= f.label @challenge_step.question.answers.answer2 %>
      <%= f.radio_button :chosen_answer, @challenge_step.question.answers.answer2 %>
    </li>
    <li>
      <%= f.label @challenge_step.question.answers.answer3 %>
      <%= f.radio_button :chosen_answer, @challenge_step.question.answers.answer3 %>
    </li>
  </ul>

  <p><%= f.submit "Question suivante" %></p>  
<% end %>